@using KingOffice.Resources;
@{
    ViewBag.Title = "Chi tiết tổ nhóm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model String
<script type="text/javascript">
    SetActiveMenu('3_2', 2);
</script>
<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-caret-right"></i>
                <a href="#">Chi tiết tổ nhóm</a>
            </li>
        </ul>
    </div>
    <div class="page-content" id="panel_body">
        <div class="row">
            <div class="col-xs-12">
                <h3 class="header smaller lighter blue">1.Thông tổ nhóm:</h3>
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Tên</label>
                        <div class="col-sm-4">
                            <input type="text" id="txtTenNhom" readonly="readonly" placeholder="Nhập tên nhóm" class="form-control" value="" />
                        </div>
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Tên ngắn</label>
                        <div class="col-sm-4">
                            <input type="text" id="txtTenNgan" readonly="readonly" placeholder="Nhập tên ngắn" class="form-control" value="" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">Người quản lý</label>
                        <div class="col-sm-4">
                            <input type="text" id="txtNguoiQuanLy" readonly="readonly" placeholder="" class="form-control" value="" />
                        </div>
                        <label class="col-sm-2 control-label no-padding-right">Nhóm cha</label>
                        <div class="col-sm-4">
                            <input type="text" id="txtNhomCha" readonly="readonly" placeholder="" class="form-control" value="" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <h3 class="header smaller lighter blue">2.Thành viên nhóm:</h3>

                <div class="form-group">
                    <div class="col-sm-12">
                        <div class="dataTables_wrapper form-inline no-footer">
                            <div class="row">
                                <div class="col-xs-6">
                                    <label>
                                        Hiển thị
                                        <select id="ddlLimit" class="form-control input-sm" onchange="onSelectLimit()">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select> dòng mỗi trang
                                    </label>
                                </div>
                            </div>
                        </div>
                        <table id="dtSource" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th style="width: 50px" class="center">STT</th>
                                    <th style="width: 200px">Mã</th>
                                    <th>Tên</th>
                                    <th>Email</th>
                                    <th style="width: 200px">SĐT</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                        <div class="clearfix" />
                        <div class="one-row no-gutters justify-content-between paginate mb-50">
                            <div class="col-auto">
                                <div class="dataTables_info" id="dtSource_info" role="status" aria-live="polite"></div>
                            </div>
                            <div class="col-auto">
                                <div class="one-row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <span id="totalPage"></span>
                                    </div>
                                    <div class="col">
                                        <div class="dataTables_paginate paging_simple_numbers" id="dtSource_paginate">
                                            <ul class="pagination" id="paging"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="hr hr-16 hr-dotted"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <hr />
                <div class="pull-right">
                    <a href="/ToNhom/QLToNhom" title="@Global.Button_Return" class="btn btn-sm btn-primary on-top-return"><i class="ace-icon glyphicon glyphicon-backward"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var strLoading = '@Global.Message_Loading';
    var team = @Html.Raw(KingOffice.Infrastructures.Utils.ToJson(@ViewBag.team));
    var queries = new URLSearchParams(window.location.search);
    var page = 1;
    var limit = 10;
    var pageMargin = 2;
    var totalPage = 1;
    var totalRecord = 0;
    $(document).ready(function () {
        if (!isNullOrUndefined(team)) {
            $("#txtTenNhom").val(team.Name)
            $("#txtTenNgan").val(team.ShortName)
            $("#txtNguoiQuanLy").val(team.LeaderName)
            $("#txtNhomCha").val(team.ParentName)
        }
        window.addEventListener('popstate', function (e) {

            queries = new URLSearchParams(window.location.search)
            page = queries.get("page");
            if (isNullOrUndefined(page) || isNullOrWhiteSpace(page))
                page = 1;
            else
                page = parseInt(page)
            limit = queries.get("limit")
            if (isNullOrUndefined(limit) || isNullOrWhiteSpace(limit))
                limit = 10;
            else
                limit = parseInt(limit)
            getData(page, limit, memberId, true)
        });
        setTableLimit("#ddlLimit");
        bindQueries()
        getData(page, limit)
    });
    function onClickPage(page) {
        page = page;
        getData(page, limit);
    }
    function bindQueries() {
        page = queries.get("page");
        if (isNullOrUndefined(page) || isNullOrWhiteSpace(page))
            page = 1;
        else
            page = parseInt(page)
        limit = queries.get("limit")
        if (isNullOrUndefined(limit) || isNullOrWhiteSpace(limit))
            limit = 10;
        else
            limit = parseInt(limit)
        $("#ddlLimit").val(limit)
       

    }

    function onSelectLimit() {
        limit = $("#ddlLimit").val()
        getData(page, limit)
    }
    function renderRow(index, rowData) {
        page = queries.get("page");
        if (isNullOrUndefined(page) || isNullOrWhiteSpace(page))
            page = 1;
        else
            page = parseInt(page)
        limit = queries.get("limit")
        if (isNullOrUndefined(limit) || isNullOrWhiteSpace(limit))
            limit = 10;
        else
            limit = parseInt(limit)
        var stt = (page - 1) * limit + index + 1;
        return "<tr role='row' class = 'odd'>"
            + renderTextCenter(stt, '', 'center w-45')
            + renderTextLeft(rowData.UserName, '', "m-50")
            + renderTextLeft(rowData.FullName, '', "m-w-150 tb-row-breakword")
            + renderTextLeft(rowData.Email, '', 'w-50')
            + renderTextLeft(rowData.Phone, '', 'w-50')
            + "</tr>";
    }

    function renderTableBody(datas) {
        var tableBody = $("#dtSource").find("tbody");
        tableBody.empty();
        if (isNullOrNoItem(datas))
            return;
        $.each(datas, function (index, item) {
            tableBody.append(renderRow(index, item));
        });

    }

    function getData(page, limit, memberId = 0, isPopState = false) {
        $.ajax({
            url: '/teams/members',
            type: "GET",
            contentType: "application/json",

            data: {
                'page': page,
                'limit': limit,
                'teamId': team.Id
            },
            success: function (response) {
                if (response.Message == null) {
                    totalRecord = response.data.TotalRecord;
                    
                    var search = this.url.replace("/teams/members", "");
                    queries = new URLSearchParams(search)
                    page = queries.get("page");
                    if (isNullOrUndefined(page) || isNullOrWhiteSpace(page))
                        page = 1;
                    else
                        page = parseInt(page)
                    limit = queries.get("limit")
                    if (isNullOrUndefined(limit) || isNullOrWhiteSpace(limit))
                        limit = 10;
                    else
                        limit = parseInt(limit)
                    renderTableBody(response.data.Datas)
                    renderPageList(page, limit, totalRecord)
                    totalPage = getTotalPage(totalRecord, limit);
                    $("#dtSource_info").text("Tổng: " + totalRecord + " items");
                    $("#totalPage").text("Tổng: " + totalPage + " trang");
                }
                else {
                    swal({
                        title: "",
                        text: response.Message.ErrorMessage,
                        type: "error",
                        timer: 4000,
                        showConfirmButton: true,
                    });
                }
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            },
            complete: function () {
                $('#panel_body').unblock();
                if (!isPopState) {
                    var requestUrl = this.url.replace("/members", "/Chitiet/" + team.Id)
                    window.history.pushState(requestUrl, this.title, requestUrl)
                }

            }
        })

    }
    
</script>